######################################
#    Colors Based on OneDark Vim     #
######################################

[onedark]
# Base (Darkest):
base00 = #282c34
# Base (Darker):
base01 = #353b45
# Darker Gray:
base02 = #3e4451
# Dark Gray:
base03 = #545862
# Gray:
base04 = #565c64
# Light Gray:
base05 = #abb2bf
# Very Light Gray:
base06 = #b6bdca
# Almost White:
base07 = #c8ccd4
# White:
base-white = #ffffff
# Pink:
base08 = #e06c75
# Yellow:
base09 = #d19a66
# Yellow 2:
base0A = #e5c07b
# Green:
